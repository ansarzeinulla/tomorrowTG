{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "aitomorrow", 
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/events",
        "destination": "/send-events.html"
      },
      {
        "source": "/send-events",
        "destination": "/send-events.html"
      },
      {
        "source": "/wheel",
        "destination": "/wheel.html"
      },
      {
        "source": "/casino",
        "destination": "/wheel.html"
      },
      {
        "source": "/register",
        "destination": "/register.html"
      },
      {
        "source": "/reg",
        "destination": "/register.html"
      },
      {
        "source": "/registration",
        "destination": "/register.html"
      }
    ]
  }
}
